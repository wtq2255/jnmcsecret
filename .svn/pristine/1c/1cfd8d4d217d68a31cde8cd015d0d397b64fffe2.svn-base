<!DOCTYPE HTML>
<html>
<head>
	<title>树洞消息</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <link rel="stylesheet" href="static/style.css" />
  <script type="text/javascript" src="static/admin.js"></script>
</head>

<body>
  <ul>
  {% for msg in messages %}
    <div class="message">
        <li>
          <form method="POST" action="/adminarticle">
            <div class="content">
              <input type="hidden" value="{{msg.id}}" name="msg_id" />
              <strong>{{ msg.id}}. </strong>
              {% if msg.msg_type == "text" %}
                {{ msg.msg_content }} <br>
                <p class="tag">{{ msg.msg_created_at }}</p>
              {% else %}
                {% if msg.msg_type == "image" %}
                  <img src="{{ msg.msg_img_url }}"> <br>
                  <p class="tag">{{ msg.msg_created_at }}</p>
                {% end %}
              {% end %}  
            </div>
            <input type="submit" id="delete" value="Delete" onClick="return cfm();" />
          </form>
        </li>        
    </div>
  {% end %}
  </ul>
</body>
</html>